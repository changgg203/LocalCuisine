rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- helpers ----------
    function isSignedIn() {
      return request.auth != null;
    }

    // Support both approaches:
    // - Custom claim: request.auth.token.admin == true
    // - Firestore flag: users/{uid}.isAdmin == true
    function isAdmin() {
      return isSignedIn()
        && (
          request.auth.token.admin == true
          || (
            exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
          )
        );
    }

    // ===== FOODS =====
    match /foods/{foodId} {
      allow read: if true;        // public read
      allow write: if isAdmin();

      // ===== REVIEWS =====
      match /reviews/{reviewId} {
        allow read: if true;

        allow create: if request.auth != null
          && request.resource.data.authorId == request.auth.uid;

        allow update, delete: if request.auth != null
          && resource.data.authorId == request.auth.uid;

        // ===== REPLIES =====
        match /replies/{replyId} {
          allow read: if true;

          allow create: if request.auth != null
            && request.resource.data.authorId == request.auth.uid;

          allow update, delete: if request.auth != null
            && resource.data.authorId == request.auth.uid;
        }
      }
    }

    // ===== USER DATA =====
    match /users/{userId} {
      // User thường: chỉ đọc/chỉnh sửa document của chính mình
      allow get, create, update: if isSignedIn() && request.auth.uid == userId;

      // Admin: full CRUD trên collection users
      // - list: để AdminUserRepository loadAll() hoạt động
      // - create/update: để admin thêm/sửa user (Firestore doc)
      // - delete: xoá user doc
      allow list, create, update, delete: if isAdmin();

      // favorites
      match /favorites/{foodId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      // notifications
      match /notifications/{notiId} {
        allow read, update, delete: if isSignedIn() && request.auth.uid == userId;

        allow create: if isSignedIn();
      }
    }
  }
}
