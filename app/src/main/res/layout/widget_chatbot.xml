<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatbotCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/brand_orange"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header - Luôn hiển thị -->
        <LinearLayout
            android:id="@+id/chatbotHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_orange"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_chatbox"
                app:tint="@color/white" />
<!--            android:src="@android:drawable/ic_menu_help"-->
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Cùng nhau khám phá ẩm thực nhé"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Clear history button -->
            <ImageButton
                android:id="@+id/btnClearHistory"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Xoá lịch sử"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnToggleChatbot"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Mở rộng/Thu gọn"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/white" />
<!--            android:src="@android:drawable/arrow_down_float"-->
        </LinearLayout>

        <!-- Chat Container - Mặc định thu gọn; input được neo ở đáy để luôn cố định -->
        <RelativeLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- Messages Area - ở trên input, chiếm không gian còn lại -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChatMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/chatInputLayout"
                android:background="@color/bg"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:scrollbars="vertical" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/progressChatbot"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/chatInputLayout"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Input Area - cố định ở đáy -->
            <LinearLayout
                android:id="@+id/chatInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/surface"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edtChatInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/chat_input_bg"
                    android:hint="Hỏi về món ăn..."
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:minHeight="44dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendMessage"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:enabled="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/brand_orange"
                    app:cornerRadius="24dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </RelativeLayout>

        </LinearLayout>

</com.google.android.material.card.MaterialCardView>
