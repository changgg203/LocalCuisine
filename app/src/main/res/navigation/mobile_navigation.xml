<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.localcuisine.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.localcuisine.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.localcuisine.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/foodDetailFragment"
        android:name="com.example.localcuisine.ui.detail.FoodDetailFragment"
        android:label="Food Detail"
        tools:layout="@layout/fragment_food_detail">

        <argument
            android:name="food_id"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_global_foodDetailFragment"
        app:destination="@id/foodDetailFragment" />
</navigation>
